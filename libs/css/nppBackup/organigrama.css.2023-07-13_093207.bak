.tile, .tileN, .tileA, .tileL {
  height: 400px;
  width: 300px;
  margin: 10px;
  display: inline-block;
  text-decoration: none;
  color: #2e5c98;
  border: 1px solid #d8d8d8;
  border-radius: 10px;
  user-select: none;
  transition: all 0.2s ease-in-out;
  background-color: #fff;
  text-align: center;
}

.tile-tittle, .tile-tittleN, .tile-tittleA, .tile-tittleL {
  margin: 0;
  width: 100%;
  padding: 0;
  height: 40px;
  line-height: 40px;
  box-sizing: border-box;
  text-transform: uppercase;
  border-bottom: 1px solid #d8d8d8;
  transition: all 0.2s ease-in-out;
  font-size: 18px;
  font-weight: 600;
}
.tile:hover .tile-tittle {
  color: #7263f0;
  font-size: 19px;
}

.tileN:hover .tile-tittleN {
  color: #fe823a;
  font-size: 19px;
}

.tileA:hover .tile-tittleA {
  color: #008b5d ;
